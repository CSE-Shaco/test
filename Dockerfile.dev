# 개발에 안정적인 LTS 권장
FROM ubuntu:22.04

# 비-인터랙티브 설정 및 기본 패키지
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    ninja-build \
    gdb \
    clang \
    lldb \
    git \
    pkg-config \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# (선택) 비루트 사용자 추가
ARG USER=dev
ARG UID=1000
ARG GID=1000
RUN groupadd -g ${GID} ${USER} && useradd -m -u ${UID} -g ${GID} -s /bin/bash ${USER}
USER ${USER}
WORKDIR /work

# 컨테이너 기본 명령: bash
CMD ["/bin/bash"]